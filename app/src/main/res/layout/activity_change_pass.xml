    <!--android:layout_width="400dp"-->
    <!--android:layout_height="400dp"-->
    <!--android:layout_marginLeft="40dp"-->
    <!--android:layout_marginTop="270dp"-->
    <!--android:background="@drawable/login_bg" />-->
    <!-- 登录 注册按钮 和状态下划线 -->


</LinearLayout>