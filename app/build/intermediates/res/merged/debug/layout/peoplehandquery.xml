            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/lin_carRColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

